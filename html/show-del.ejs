<html lang="en" dir="ltr">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ExcelJee | File Show/Delete</title>
  <link rel="shortcut icon" href="image/favicon.png" type="image/png">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
<style >
  .imgset{
    height: 120px;
    width:200px;
  }
</style>

</head>

<body><br>
<h4 class="text-center">To delete file enter file name</h4><br>
<form class="text-center" action="/delfile" method="post">
  <label for="name"><h5>File Name</h5></label>
  <input id="name" type="text" name="filename" value="">
  <button class="btn btn-danger" type="submit" name="button">Delete</button>
</form>
<hr>
  <h1 class="text-center">Uploaded Images</h1><br>
  <div class="text-center">
  <div class="row text-center divset">
    <% items.forEach(function(image) { %>
    <div class="text-center">
      <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
        <div class="imgset">
          <div class=text-center">
            <% if(image.type=="image") { %>
            <img class="imgset" src="data:image/<%=image.file.contentType%>;base64,
                             <%=image.file.toString('base64')%>">
              <% } else {%>
            <img class="imgset" src="image/pdf-image.png" alt="">
            <%}%>
              <h5 class="text-center"><%= image.topic %></h5>
              <p class="text-center"><%= image.desc %></p>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
  </div>
</body>

</html>
